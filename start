    python3 setup/updater.py requirements.txt requirements.txt
    local zippath
    zippath="jepthon.zip"
    echo "Ø¯Ø§Ú¯Ø±ØªÙ†ÛŒ Ù†ÙˆØ³Ø±Ø§ÙˆÛŒ Ø³Û•Ø±Ú†Ø§ÙˆÛ• âœ“"
    wget -q $(_get_ziplink) -O "$zippath"
    echo " Ø²Ø§Ù†ÛŒØ§Ø±ÛŒÛ•Ú©Ø§Ù†ÛŒ Ø¨Û†ØªÛŒ Ø²ÛŒØ±Û•Ùƒ Ø¦ÛØ³ØªØ§ ÙÚ•ÛØ¯Ø±Ø§ÙˆÛ• "
    CATPATH=$(zipinfo -1 "$zippath" | grep -v "/.");
    unzip -qq "$zippath"
    echo "âœ“  Ø¨Û•ØªØ§ÚµÚ©Ø±Ø§ÙˆÛ• "
    echo "Ù¾Ø§Ú©Ú©Ø±Ø¯Ù†Û•ÙˆÛ• ØªÛ•ÙˆØ§Ùˆ Ø¨ÙˆÙˆÛ• "
    rm -rf "$zippath"
    sleep 5
